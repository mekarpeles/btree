import unittest
from btree import bst

class BinarySearch_Test(unittest.TestCase):

    def test_insert_left(self):
        btree = bst.BinaryTree(5) # root
        btree.insert(3)
        left = btree.root.left
        self.assertTrue(left.value 
                        "Node left node has value None, should be 3" % left.value)

        self.assertTrue(left.value == 7,
                        "Node left of root has value %s, expected 3" % left.value)
        pass

    def test_insert_right(self):
        btree = bst.BinaryTree(5) # root
        btree.insert(7)
        self.assertTrue(btree.root.right, "Right node has value None, should be 7")
        self.assertTrue(btree.root.right.value == 7,
                        "Node left of root has value %s, expected 7")

